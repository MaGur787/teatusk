// Helper function to add two numbers
function add(a, b) {
  return a + b;
}

// Helper function to subtract two numbers
function subtract(a, b) {
  return a - b;
}

// Main function to perform calculations
function calculate(operation, num1, num2) {
  switch (operation) {
    case 'add':
      return add(num1, num2);
    case 'subtract':
      return subtract(num1, num2);
    default:
      return 'Invalid operation';
  }
}

// Example usage
const resultAddition = calculate('add', 5, 3);
console.log(`Addition result: ${resultAddition}`);

const resultSubtraction = calculate('subtract', 8, 2);
console.log(`Subtraction result: ${resultSubtraction}`);